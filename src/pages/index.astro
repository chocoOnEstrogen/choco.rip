---
import Main from '../layouts/Main.astro'
import config from '../config'
import HomeAbout from '../components/HomeAbout.astro'
import Modal from '../components/Modal.astro'
import tech from '../json/tech.json'
import projects from '../json/projects.json'
---

<Main currentPage="/" title="Home">
	<section class="min-h-[80vh] flex flex-col justify-center">
		<div class="space-y-6">
			<h1 class="text-5xl font-bold" data-ani="slide-in-blur">
				Hi, I'm <span class="text-emerald-400" data-ani="glow-pulse"
					>{config.author.name}</span
				>
				<span data-ani="float" class="inline-block">ðŸ‘‹</span>
			</h1>
			<p
				class="text-xl text-zinc-300 max-w-2xl"
				data-ani="fade-up"
				data-delay="200"
			>
				<HomeAbout />
			</p>
			<div class="flex gap-4" data-ani="fade-up" data-delay="400">
				<a
					href="/projects"
					class="px-6 py-2 bg-emerald-500 hover:bg-emerald-600 rounded-full transition-colors"
				>
					View My Work
				</a>
				<button
					data-modal-trigger="contact-modal"
					class="px-6 py-2 bg-emerald-500 hover:bg-emerald-600 rounded-full transition-colors"
				>
					Contact Me
				</button>
			</div>
		</div>
	</section>

	<section class="py-20">
		<h2 class="text-3xl font-bold mb-10" data-ani="fade-up">
			Technologies I Work With
		</h2>
		<div class="flex flex-wrap gap-4">
			{tech.map((t, index) => (
				<div 
					class={`flex items-center gap-3 px-5 py-2.5 rounded-full text-sm 
					${t.color} backdrop-blur-sm 
					shadow-lg transition-all duration-300
					hover:scale-105 hover:shadow-xl`}
					data-ani="pop-up"
					data-delay={`${(index + 1) * 100}`}
				>
					<i class={`${t.icon} text-xl`}></i>
					<span class="font-medium">{t.name}</span>
				</div>
			))}
		</div>
	</section>

	<section class="py-20">
		<h2 class="text-3xl font-bold mb-10" data-ani="fade-up">
			Featured Projects
		</h2>
		<div class="grid md:grid-cols-2 gap-6">
			{
				projects.filter((project) => project.featured).map((project, index) => (
					<a
						href={project.link || project.git}
						class="block p-6 rounded-lg bg-zinc-800/50 hover:bg-zinc-800 transition-colors"
						data-ani="fade-up"
						data-delay={`${(index + 1) * 200}`}
					>
						<h3 class="text-xl font-bold mb-2">{project.title}</h3>
						<p class="text-zinc-300 mb-4">{project.description}</p>
						<div class="flex gap-2">
							{project.tags.map((tag) => (
								<span class="px-3 py-1 bg-zinc-700 rounded-full text-xs">
									{tag}
								</span>
							))}
						</div>
					</a>
				))
			}
		</div>
	</section>
</Main>
