---
import Main from '../../layouts/Main.astro';
import { getCollection } from 'astro:content';

const license = (await getCollection('misc')).find(
	(post: any) => post.slug === 'license'
);

if (!license) {
	throw new Error('Could not find license content');
}

const { Content } = await license.render();
---

<Main currentPage="/open-source/license" title="License">
	<section class="max-w-4xl mx-auto px-4 py-12">
		<div class="prose prose-invert prose-lg max-w-none markdown">
			<Content />
		</div>
	</section>
</Main>
