---

<Main title={title} description={description}>
    <Terminal>
        <div class="space-y-8">
            <header class="space-y-4">
                <h1 class="text-2xl font-bold text-everforest-green">
                    Developer Resources
                </h1>
                <p class="text-everforest-fg/80">
                    A curated collection of essential tools, learning materials, and community resources for developers.
                </p>
            </header>

            <!-- Important Resources Section -->
            <section class="space-y-4">
                <h2 class="text-xl font-bold text-everforest-yellow">Important Links</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    {importantResources.map(resource => (
                        <a href={resource.url} 
                           class="flex items-center gap-3 p-4 rounded-lg bg-everforest-bg-light hover:bg-everforest-bg-dim transition-colors">
                            <i class={`fas ${resource.icon} text-everforest-green`}></i>
                            <span>{resource.name}</span>
                        </a>
                    ))}
                </div>
            </section>

            <!-- Main Resources Sections -->
            {resourceSections.map(section => (
                <section class="space-y-4">
                    <h2 class="text-xl font-bold text-everforest-blue flex items-center gap-2">
                        <i class={`fas ${section.icon}`}></i>
                        {section.title}
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {section.items.map(item => (
                            <a href={item.url} 
                               class="block p-4 rounded-lg bg-everforest-bg-light hover:bg-everforest-bg-dim transition-colors">
                                <h3 class="font-bold text-everforest-green">{item.name}</h3>
                                <p class="text-sm text-everforest-fg/80">{item.desc}</p>
                            </a>
                        ))}
                    </div>
                </section>
            ))}

            <!-- Footer Note -->
            <footer class="mt-8 pt-4 border-t border-everforest-gray/20">
                <p class="text-everforest-fg/60 text-sm">
                    This resource collection is regularly updated. Last updated: {lastUpdated}
                </p>
            </footer>
        </div>
    </Terminal>
</Main> 