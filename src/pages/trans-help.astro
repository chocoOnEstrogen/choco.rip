---
import Main from "../layouts/Main.astro"
import Terminal from "../components/Terminal.astro"

const title = "Transgender Resources & Support"
const description = "A comprehensive collection of resources, support services, and information for the transgender community. Find crisis support, healthcare resources, legal help, and more."

const tags = [
    "transgender resources", "trans support", "crisis support",
    "mental health", "healthcare", "legal resources",
    "community support", "trans healthcare", "LGBTQ+ support"
]

// Structured data for better SEO
const resourcePageSchema = {
    "@context": "https://schema.org",
    "@type": "WebPage",
    "name": title,
    "description": description,
    "url": Astro.url.toString(),
    "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
            {
                "@type": "Thing",
                "name": "Crisis Support",
                "description": "24/7 crisis support services for the transgender community"
            },
            {
                "@type": "Thing",
                "name": "Mental Health Resources",
                "description": "Mental health support and counseling services for transgender individuals"
            },
            {
                "@type": "Thing",
                "name": "Healthcare Resources",
                "description": "Medical resources and healthcare providers for transgender individuals"
            },
            {
                "@type": "Thing",
                "name": "Legal Resources",
                "description": "Legal assistance and advocacy for transgender rights"
            },
            {
                "@type": "Thing",
                "name": "Community Support",
                "description": "Online and in-person transgender community support networks"
            }
        ]
    }
}

// Crisis resources with immediate access
const crisisResources = [
    {
        name: "Trans Lifeline",
        contact: "877-565-8860",
        href: "tel:877-565-8860",
        icon: "fa-phone",
        desc: "Peer support hotline run by and for trans people"
    },
    {
        name: "Trevor Project",
        contact: "866-488-7386",
        href: "tel:866-488-7386",
        icon: "fa-phone",
        desc: "24/7 crisis support for LGBTQ+ youth"
    },
    {
        name: "Crisis Text Line",
        contact: "741741",
        isText: true,
        icon: "fa-message",
        desc: "Text HOME to connect with a counselor"
    }
]

// Main resource sections
const resourceSections = [
    {
        title: "Mental Health Resources",
        icon: "fa-brain",
        color: "purple",
        items: [
            {
                name: "Pride Counseling",
                url: "https://www.pridecounseling.com",
                desc: "LGBTQ+ Focused Online Therapy"
            },
            {
                name: "GALAP Directory",
                url: "https://thegalap.org",
                desc: "Free Letters for Gender-Affirming Care"
            },
            {
                name: "Trans Mental Health Hub",
                url: "https://www.thetrevorproject.org/resources",
                desc: "Mental Health Resources & Support"
            }
        ]
    },
    {
        title: "Healthcare Resources",
        icon: "fa-heart",
        color: "pink",
        items: [
            {
                name: "Planned Parenthood",
                url: "https://www.plannedparenthood.org/learn/gender-identity/transgender",
                desc: "Gender-Affirming Healthcare Services"
            },
            {
                name: "FOLX Health",
                url: "https://www.folxhealth.com",
                desc: "Virtual Trans Healthcare Provider"
            },
            {
                name: "Plume",
                url: "https://getplume.co",
                desc: "Telehealth HRT Services"
            }
        ]
    },
    {
        title: "Legal Resources",
        icon: "fa-scale-balanced",
        color: "blue",
        items: [
            {
                name: "Transgender Law Center",
                url: "https://transgenderlawcenter.org",
                desc: "Legal Support & Advocacy"
            },
            {
                name: "National Center for Transgender Equality",
                url: "https://transequality.org",
                desc: "Policy & Legal Resources"
            },
            {
                name: "Trans Legal Defense",
                url: "https://transgenderlegal.org",
                desc: "Legal Support Services"
            }
        ]
    },
    {
        title: "Community Support",
        icon: "fa-people-group",
        color: "emerald",
        items: [
            {
                name: "PFLAG",
                url: "https://pflag.org",
                desc: "Family & Ally Support Network"
            },
            {
                name: "Gender Spectrum",
                url: "https://www.genderspectrum.org",
                desc: "Support for Trans Youth & Families"
            },
            {
                name: "Point of Pride",
                url: "https://pointofpride.org",
                desc: "Financial Aid & Resources"
            }
        ]
    }
]

// Educational resources
const educationalResources = [
    {
        name: "Gender Dysphoria Bible",
        url: "https://genderdysphoria.fyi",
        desc: "Comprehensive Information Guide"
    },
    {
        name: "Trans Hub",
        url: "https://www.transhub.org.au/101",
        desc: "Educational Resources & Information"
    },
    {
        name: "Trans Student Resources",
        url: "https://transstudent.org",
        desc: "Resources for Trans Students"
    }
]
---

<Main title={title} description={description}>
    <Terminal>
        <div class="space-y-8">
            <header class="space-y-4">
                <h1 class="text-2xl font-bold text-everforest-green">
                    Transgender Resources & Support
                </h1>
                <p class="text-everforest-fg/80">
                    A comprehensive collection of resources, support services, and information for the transgender community. Remember, you're not alone in this journey.
                </p>
                
                <div class="flex flex-wrap gap-2">
                    {tags.map(tag => (
                        <span class="px-2 py-1 text-xs rounded-full bg-everforest-bg-light text-everforest-aqua">
                            {tag}
                        </span>
                    ))}
                </div>
            </header>

            <!-- Crisis Support Section -->
            <section class="space-y-4">
                <h2 class="text-xl font-bold text-everforest-red flex items-center gap-2">
                    <i class="fas fa-phone-volume"></i>
                    24/7 Crisis Support
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    {crisisResources.map(resource => (
                        <a href={resource.href} 
                           class="block p-4 rounded-lg bg-everforest-bg-light hover:bg-everforest-bg-dim transition-colors">
                            <div class="flex items-center gap-3">
                                <i class={`fas ${resource.icon} text-everforest-red`}></i>
                                <div>
                                    <h3 class="font-bold text-everforest-green">{resource.name}</h3>
                                    <p class="text-everforest-fg">{resource.contact}</p>
                                    <p class="text-sm text-everforest-fg/80">{resource.desc}</p>
                                </div>
                            </div>
                        </a>
                    ))}
                </div>
            </section>

            <!-- Main Resource Sections -->
            {resourceSections.map(section => (
                <section class="space-y-4">
                    <h2 class="text-xl font-bold text-everforest-blue flex items-center gap-2">
                        <i class={`fas ${section.icon}`}></i>
                        {section.title}
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        {section.items.map(item => (
                            <a href={item.url} 
                               class="block p-4 rounded-lg bg-everforest-bg-light hover:bg-everforest-bg-dim transition-colors">
                                <h3 class="font-bold text-everforest-green">{item.name}</h3>
                                <p class="text-sm text-everforest-fg/80">{item.desc}</p>
                            </a>
                        ))}
                    </div>
                </section>
            ))}

            <!-- Educational Resources -->
            <section class="space-y-4">
                <h2 class="text-xl font-bold text-everforest-purple flex items-center gap-2">
                    <i class="fas fa-book-open"></i>
                    Educational Resources
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                    {educationalResources.map(resource => (
                        <a href={resource.url} 
                           class="block p-4 rounded-lg bg-everforest-bg-light hover:bg-everforest-bg-dim transition-colors">
                            <h3 class="font-bold text-everforest-green">{resource.name}</h3>
                            <p class="text-sm text-everforest-fg/80">{resource.desc}</p>
                        </a>
                    ))}
                </div>
            </section>

            <!-- Important Note -->
            <footer class="mt-8 p-4 border-t border-everforest-gray/20">
                <p class="text-everforest-fg/80 text-sm">
                    This resource collection is regularly updated and maintained. If you know of additional resources that should be included, please reach out to contribute.
                </p>
            </footer>
        </div>
    </Terminal>
</Main> 