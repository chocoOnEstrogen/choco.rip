<%- contentFor('body') %>

<!-- Hero Section -->
<section id="home" class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6" data-aos="fade-right">
                <div class="hero-content">
                    <h1 class="hero-title" data-text="Hi, I'm <%= constants.USERNAME %>">
                        Hi, I'm <%= constants.USERNAME %>
                    </h1>
                    <p class="hero-subtitle"><%= constants.USER_DESCRIPTION %></p>
                    <div class="hero-buttons">
                        <a href="/about" class="btn btn-outline">
                            <i class="fas fa-user me-2"></i>About Me
                        </a>
                        <a href="/projects" class="btn btn-outline">
                            <i class="fas fa-code me-2"></i>View Projects
                        </a>
                    </div>
                    <div class="hero-stats mt-4">
                        <div class="stat-item">
                            <i class="fas fa-star"></i>
                            <span><%= stats.stars %> Stars</span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-code-branch"></i>
                            <span><%= stats.repos.length %> Repos</span>
                        </div>
                        <div class="stat-item">
                            <i class="fas fa-users"></i>
                            <span><%= stats.followers %> Followers</span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6" data-aos="fade-left">
                <div class="hero-image-wrapper">
                    <img src="/profile-image" 
                         alt="Profile Image" 
                         class="hero-image" 
                         data-speed="0.5">
                    <div class="hero-badges">
                        <% stats.mostUsedLangs.forEach((lang) => { %>
                            <span class="tech-badge"><%= lang.name %></span>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Recent Blog Posts Section -->
<section id="recent-posts" class="recent-posts-section">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title" data-aos="fade-up">Recent Blog Posts</h2>
            <p class="text-muted" data-aos="fade-up" data-aos-delay="100">Check out my latest thoughts and updates</p>
        </div>

        <div class="row g-4">
            <% recentPosts.forEach((post, index) => { %>
                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="<%= index * 100 %>">
                    <article class="card h-100 border-0 shadow-sm bg-glass hover-card">
                        <a href="/blog/<%= post.publishedAt.getFullYear() %>/<%= (post.publishedAt.getMonth() + 1).toString().padStart(2, '0') %>/<%= post.publishedAt.getDate().toString().padStart(2, '0') %>/<%= post.slug %>" 
                           class="text-decoration-none">
                            <% if (post.coverImage) { %>
                                <img src="<%= post.coverImage %>" 
                                     class="card-img-top" 
                                     alt="<%= post.title %>"
                                     style="height: 200px; object-fit: cover;">
                            <% } %>
                            <div class="card-body">
                                <div class="d-flex flex-wrap gap-2 mb-3">
                                    <% post.tags.forEach(tag => { %>
                                        <span class="badge rounded-pill">
                                            <%= tag %>
                                        </span>
                                    <% }) %>
                                </div>
                                <h3 class="card-title h5 mb-2"><%= post.title %></h3>
                                <p class="card-text text-muted mb-3"><%= post.excerpt %></p>
                                <div class="d-flex align-items-center mt-auto">
                                    <div class="d-flex align-items-center text-muted">
                                        <i class="far fa-clock me-1"></i>
                                        <small><%= post.readingTime %> min read</small>
                                    </div>
                                    <small class="text-muted ms-auto post-date">
                                        <%= formatDistance(post.publishedAt, new Date(), { addSuffix: true }) %>
                                    </small>
                                </div>
                            </div>
                        </a>
                    </article>
                </div>
            <% }) %>
        </div>

        <div class="text-center mt-5" data-aos="fade-up" data-aos-delay="300">
            <a href="/blog" class="btn btn-outline">
                <i class="fas fa-book me-2"></i>View All Posts
            </a>
        </div>
    </div>
</section>

<style>
.hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 6rem 0;
    position: relative;
    margin-top: var(--navbar-height);
    overflow: hidden;
}

.hero-content {
    position: relative;
    z-index: 2;
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    position: relative;
}

.hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-color);
    margin-bottom: 2rem;
    opacity: 0.9;
    max-width: 600px;
}

.hero-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
}


.btn-outline {
    background: transparent;
    color: var(--text-color);
    padding: 0.75rem 1.5rem;
    border-radius: 12px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: 1px solid var(--border-color);
}

.btn-outline:hover {
    background: var(--card-bg);
    transform: translateY(-2px);
    color: var(--text-color);
}

.hero-stats {
    display: flex;
    gap: 2rem;
    margin-top: 2rem;
}

.stat-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-color);
    font-weight: 500;
}

.stat-item i {
    color: var(--primary-color);
}

.hero-image-wrapper {
    position: relative;
    text-align: center;
}

.hero-image {
    width: 400px;
    height: 400px;
    border-radius: 30px;
    object-fit: cover;
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.hero-badges {
    position: absolute;
    bottom: -20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 1rem;
    background: var(--card-bg);
    padding: 1rem;
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
}

.tech-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--bg-color);
    border-radius: 8px;
    font-weight: 500;
    color: var(--text-color);
}

.tech-badge i {
    color: var(--primary-color);
}

/* Dark mode adjustments */
[data-theme="dark"] .hero-image {
    box-shadow: 0 16px 32px rgba(0, 0, 0, 0.3);
}

[data-theme="dark"] .blog-title {
    color: var(--text-color);
}

/* Responsive design */
@media (max-width: 991px) {
    .hero-section {
        padding: 4rem 0;
        text-align: center;
    }

    .hero-title {
        font-size: 2.5rem;
    }

    .hero-buttons {
        justify-content: center;
    }

    .hero-stats {
        justify-content: center;
    }

    .hero-image {
        width: 300px;
        height: 300px;
        margin-top: 3rem;
    }

    .hero-badges {
        flex-wrap: wrap;
        justify-content: center;
    }
}

@media (max-width: 576px) {
    .hero-title {
        font-size: 2rem;
    }

    .hero-subtitle {
        font-size: 1.1rem;
    }

    .hero-image {
        width: 250px;
        height: 250px;
    }

    .hero-stats {
        flex-direction: column;
        gap: 1rem;
        align-items: center;
    }
}

/* Add these new styles */
.recent-posts-section {
    padding: 6rem 0;
    background: linear-gradient(180deg, var(--bg-color) 0%, var(--card-bg) 100%);
}

.section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    background: var(--gradient-2);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.hover-card {
    transition: all 0.3s ease;
}

.hover-card:hover {
    transform: translateY(-5px);
}

/* Dark mode adjustments */
[data-theme="dark"] .recent-posts-section {
    background: linear-gradient(180deg, var(--bg-color) 0%, rgba(0,0,0,0.1) 100%);
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .recent-posts-section {
        padding: 4rem 0;
    }

    .section-title {
        font-size: 2rem;
    }
}

/* Updated card styles */
.card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.badge {
    background: rgba(99, 102, 241, 0.1);
    color: #818cf8;
    font-weight: 500;
    font-size: 0.875rem;
    padding: 0.35rem 0.75rem;
    border: 1px solid rgba(99, 102, 241, 0.2);
}

.post-date {
    opacity: 0.7;
    font-size: 0.875rem;
}

/* Dark mode adjustments */
[data-theme="dark"] .card {
    background: rgba(0, 0, 0, 0.2);
    border-color: rgba(255, 255, 255, 0.05);
}

[data-theme="dark"] .badge {
    background: rgba(99, 102, 241, 0.15);
    border-color: rgba(99, 102, 241, 0.3);
}

[data-theme="dark"] .text-muted {
    color: rgba(255, 255, 255, 0.6) !important;
}
</style>


