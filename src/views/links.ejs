<%- contentFor('body') %>

<section class="links-section min-vh-100 py-5">
    <div class="container">
        <!-- Section Header -->
        <div class="text-center mb-5" data-aos="fade-up">
            <h1 class="display-4 fw-bold mb-3">Links & Resources</h1>
            <p class="lead text-muted">Connect with me across various platforms</p>
        </div>

        <!-- Links Grid -->
        <div class="links-grid">
            <div class="matching-links-list">
                <% for( let link of links ) { %>
                    <a href="/links/<%= link.title.replace(/\s+/g, '-').toLowerCase() %>" class="matching-link-item">
                        <div class="d-flex align-items-center">
                            <div class="matching-link-icon">
                                <i class="<%= link.icon %>"></i>
                            </div>
                            <div class="matching-link-info">
                                <h3 class="matching-link-title"><%= link.title %></h3>
                                <% if (link.description) { %>
                                    <p class="matching-link-description"><%= link.description %></p>
                                <% } %>
                            </div>
                        </div>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                <% } %>
            </div>
        </div>
    </div>
</section>

<style>
    .matching-links-card {
    background: var(--card-bg);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    max-width: 800px;
    margin: 0 auto;
}

.matching-links-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.matching-link-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    border-radius: 12px;
    background: var(--bg-color);
    color: var(--text-color);
    text-decoration: none;
    transition: all 0.2s ease;
}

.matching-link-item:hover {
    transform: translateX(8px);
    background: var(--primary-color);
    color: white;
}

.matching-link-icon {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--card-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    font-size: 1.2rem;
}

.matching-link-info {
    flex: 1;
}

.matching-link-title {
    font-size: 1.1rem;
    margin: 0;
    font-weight: 500;
}

.matching-link-description {
    font-size: 0.9rem;
    margin: 0.25rem 0 0;
    opacity: 0.8;
}

[data-theme="dark"] .matching-links-card {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}
</style>