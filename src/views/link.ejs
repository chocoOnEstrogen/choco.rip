    background: var(--card-bg);
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    max-width: 600px;
    margin: 0 auto;
}

.back-button {
    color: var(--text-color);
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.2s ease;
}

.back-button:hover {
    color: var(--primary-color);
}

.link-icon {
    color: var(--primary-color);
    background: var(--bg-color);
    width: 80px;
    height: 80px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
}

.link-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--text-color);
}

.link-description {
    color: var(--text-muted);
    font-size: 1.1rem;
    max-width: 500px;
    margin: 0 auto;
}

.link-meta {
    font-size: 0.9rem;
}

.btn-lg {
    padding: 1rem 2rem;
    font-size: 1.1rem;
}

[data-theme="dark"] .single-link-card {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}

.matching-links-card {
    background: var(--card-bg);
