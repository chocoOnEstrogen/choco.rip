<%- contentFor('body') %>

<section class="single-link-section">
    <div class="container py-4">
        <% if (matchingLinks && matchingLinks.length > 1) { %>
            <div class="matching-links-card" data-aos="fade-up">
                <div class="link-header mb-4">
                    <a href="/links" class="back-button">
                        <i class="fas fa-arrow-left"></i>
                        <span>Back to Links</span>
                    </a>
                </div>
                
                <h2 class="mb-4">Multiple Links Found</h2>
                
                <div class="matching-links-list">
                    <% matchingLinks.forEach(matchingLink => { %>
                        <a href="/links/<%= matchingLink.title.replace(/\s+/g, '-').toLowerCase() %>" class="matching-link-item">
                            <div class="d-flex align-items-center">
                                <div class="matching-link-icon">
                                    <i class="<%= matchingLink.icon %>"></i>
                                </div>
                                <div class="matching-link-info">
                                    <h3 class="matching-link-title"><%= matchingLink.title %></h3>
                                    <% if (matchingLink.description) { %>
                                        <p class="matching-link-description"><%= matchingLink.description %></p>
                                    <% } %>
                                </div>
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    <% }); %>
                </div>
            </div>
        <% } else if (link) { %>
            <div class="single-link-card" data-aos="fade-up">
                <div class="link-header mb-4">
                    <a href="/links" class="back-button">
                        <i class="fas fa-arrow-left"></i>
                        <span>Back to Links</span>
                    </a>
                </div>
                
                <div class="link-content text-center">
                    <div class="link-icon mb-4">
                        <i class="<%= link.icon %> fa-3x"></i>
                    </div>
                    
                    <h1 class="link-title mb-3"><%= link.title %></h1>
                    
                    <% if (link.description) { %>
                        <p class="link-description mb-4"><%= link.description %></p>
                    <% } %>
                    
                    <div class="link-meta mb-4">
                        <span class="badge bg-primary me-2"><%= link.type.charAt(0).toUpperCase() + link.type.slice(1) %></span>
                    </div>
                    
                    <a href="<%= link.url %>" 
                       class="btn btn-primary btn-lg"
                       target="_blank" 
                       rel="noopener noreferrer">
                        <i class="fas fa-external-link-alt me-2"></i>
                        Visit Link
                    </a>
                </div>
            </div>
        <% } else { %>
            <div class="text-center">
                <h2>Link not found</h2>
                <p class="text-muted">The requested link does not exist or has been removed.</p>
                <a href="/links" class="btn btn-primary mt-3">
                    <i class="fas fa-arrow-left me-2"></i>
                    Back to Links
                </a>
            </div>
        <% } %>
    </div>
</section>

<style>
