    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1rem;
    border-radius: 12px;
    background: var(--bg-color);
    color: var(--text-color);
    text-decoration: none;
    transition: all 0.2s ease;
}

.matching-link-item:hover {
    transform: translateX(8px);
    background: var(--primary-color);
    color: white;
