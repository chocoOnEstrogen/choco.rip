    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: var(--card-bg);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 1rem;
    font-size: 1.2rem;
}

.matching-link-info {
    flex: 1;
}

.matching-link-title {
    font-size: 1.1rem;
    margin: 0;
    font-weight: 500;
}

.matching-link-description {
    font-size: 0.9rem;
    margin: 0.25rem 0 0;
    opacity: 0.8;
}

[data-theme="dark"] .matching-links-card {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
}
</style> 