<!-- Footer -->
<footer class="footer py-5">
  <div class="container">
    <div class="row gy-4">
      <!-- Brand Column -->
      <div class="col-lg-4">
        <h5 class="mb-3"><%= constants.NAVBAR_BRAND %></h5>
        <p class="mb-3"><%= constants.USER_DESCRIPTION %></p>
        <div class="social-links">
          <% links.forEach(link => { %>
          <a href="<%= link.url %>" class="me-3 social-icon" data-bs-toggle="tooltip" style="font-size: 1rem; text-decoration: none;" title="<%= link.title %>" target="_blank" rel="noopener noreferrer">
            <i class="<%= link.icon %>"></i>
          </a>
          <% }) %>
        </div>
      </div>

      <!-- Quick Links -->
      <div class="col-lg-4">
        <h5 class="mb-3">Quick Links</h5>
        <ul class="list-unstyled">
          <% if (cfg.navigation.footer_links) { %>
          <% cfg.navigation.footer_links.forEach(link => { %>
          <li><a href="<%= link.url %>" class="text-decoration-none"><%= link.title %></a></li>
          <% }) %>
          <% } %>
        </ul>
      </div>

      <!-- Contact Info -->
      <% if (cfg.contact) { %>
      <div class="col-lg-4">
        <h5 class="mb-3">Get in Touch</h5>
        <p class="mb-2">Feel free to reach out!</p>
        <div class="d-flex flex-column">
            <% if (cfg.contact.email) { %>
                <a href="mailto:<%= cfg.contact.email %>" class="text-decoration-none">
                  <i class="fas fa-envelope me-2"></i><%= cfg.contact.email %>
                </a>
                <% } %>
        
                <% if (cfg.contact.discord) { %>
                <a href="<%= cfg.contact.discord.invite %>" class="text-decoration-none">
                  <i class="fab fa-discord me-2"></i><%= cfg.contact.discord.name %>
                </a>
                <% } %>
        </div>
      </div>
      <% } %>
    </div>

    <!-- Copyright -->
    <div class="row mt-4 pt-3 border-top">
      <div class="col-md-6">
        <p class="mb-0">&copy; <%= new Date().getFullYear() %> <%= constants.USERNAME %>. All rights reserved.</p>
      </div>
      <div class="col-md-6 text-md-end">
        <% if (cfg.navigation.footer_links) { %>
        <% cfg.navigation.footer_links.forEach(link => { %>
        <a href="<%= link.url %>" class="me-3 text-decoration-none"><%= link.title %></a>
        <% }) %>
        <% } %>
      </div>
    </div>
  </div>
</footer>
<style>
  .social-icon:hover {
    opacity: 0.8;
    transform: translateY(-2px);
    transition: all 0.3s ease;
  }

  .footer li {
    margin-bottom: 0.5rem;
  }

  .footer a:hover {
    opacity: 0.8;
  }
</style>
