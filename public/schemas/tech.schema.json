{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Technology Stack",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "icon", "color", "category"],
    "properties": {
      "name": {
        "type": "string",
        "description": "Name of the technology"
      },
      "icon": {
        "type": "string",
        "description": "Font Awesome icon class",
        "pattern": "^fa-[a-zA-Z-]+ fa-[a-zA-Z-]+$"
      },
      "color": {
        "type": "string",
        "description": "Tailwind CSS color classes",
        "pattern": "^text-\\[#[0-9A-F]{6}\\] bg-[a-zA-Z-]+/[0-9]+ hover:bg-[a-zA-Z-]+$"
      },
      "category": {
        "type": "string",
        "enum": [
          "Programming Languages",
          "Frontend",
          "Frontend Frameworks",
          "CSS Frameworks",
          "Libraries",
          "Development Tools",
          "Cloud Services"
        ]
      }
    }
  }
} 